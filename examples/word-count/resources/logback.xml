<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">

    <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
      <evaluator>
        <!-- filter warnings due to use of unknown config options -->
        <expression>return message.contains("was supplied but isn't a known config");</expression>
      </evaluator>
      <OnMismatch>NEUTRAL</OnMismatch>
      <OnMatch>DENY</OnMatch>
    </filter>

    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>

  <!-- suppress debug and info level logging from Java client libraries -->
  <logger name="org.apache.kafka" level="WARN" />
  <logger name="io.confluent.kafka.serializers" level="WARN" />

</configuration>
